<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WeatherFragment"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/today_touch_selector">
        <TextView
            android:text="NewYork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main_city_name_textview"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-condensed"
            android:textAppearance="?android:textAppearanceLarge"
            />
        <TextView
            android:text="1938.323"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main_coordlat_textview"
            android:fontFamily="sans-serif-condensed"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@color/white"
            />
        <TextView
            android:text="163.33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main_coordlong_textview"
            android:fontFamily="sans-serif-condensed"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@color/white"
            />
    </LinearLayout>
    <ListView
        style="@style/ForecastListStyle"
        android:id="@+id/listview_forecast"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        ></ListView>

</LinearLayout>
