<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:padding = "16dp"
    >

    <ImageView
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:id="@+id/list_item_icon"
        android:layout_weight = "0"
        android:layout_gravity="center"
        />
    <LinearLayout
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/day_description"
        android:layout_width="0dp"
        android:layout_weight = "1"
        android:paddingLeft="@dimen/activity_vertical_margin"
        >
        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Motherday"
            android:id="@+id/list_item_day_textview" />
        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Some Weather"
            android:id="@+id/list_item_forecast_textview" />

    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:id="@+id/high_low_temp"
        >
        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="21C"
            android:id="@+id/list_item_forecast_high_textview" />
        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="10C"
            android:id="@+id/list_item_forecast_low_textview" />
    </LinearLayout>
</LinearLayout>